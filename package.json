{
  "name": "crossban-bot",
  "version": "1.0.0-beta",
  "description": "A Discord bot for synchronizing bans across multiple communities.",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "npx tsx --env-file=.env.local src/index.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "docker:dev": "docker compose --env-file .env.local -f 'docker-compose.dev.yml' up -d",
    "docker:dev:build": "docker compose --env-file .env.local -f 'docker-compose.dev.yml' up -d --build",
    "docker:dev:down": "docker compose -f 'docker-compose.dev.yml' down",
    "docker:dev:restart": "docker compose --env-file .env.local -f 'docker-compose.dev.yml' restart",
    "docker:prod": "docker compose --env-file .env.production -f 'docker-compose.prod.yml' up -d",
    "docker:prod:build": "docker compose --env-file .env.production -f 'docker-compose.prod.yml' up -d --build",
    "docker:prod:down": "docker compose --env-file .env.production -f 'docker-compose.prod.yml' down",
    "docker:prod:restart": "docker compose --env-file .env.production -f 'docker-compose.prod.yml' restart"
  },
  "keywords": [
    "discord",
    "bot",
    "ban",
    "cross-server",
    "moderation",
    "synchronization"
  ],
  "author": "",
  "license": "PolyForm Noncommercial License 1.0.0",
  "packageManager": "pnpm@10.15.0",
  "type": "commonjs",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0"
  }
}
